@model Product

@{
    Layout = "_DashBoard";
}


<div class="dash-content">
    <div class="overview">
        <div class="title">
            <i class="uil uil-tachometer-fast-alt"></i>
            <span class="text">Editing Product</span>
        </div>

        <div>
            <form method="post" asp-action="EditProduct" class="row">
                <div class="mb-3">
                    <label asp-for="Name" for="" class="form-label">Product Name</label>
                    <input type="text"
                           asp-for="Name"
                           value="@Model.Name"
                           class="form-control"
                           placeholder="" />

                </div>
                <div class="mb-3">
                    <label asp-for="Description" for="" class="form-label">Product Description</label>
                    <textarea type="text"
                              asp-for="Description"
                              class="form-control"
                              placeholder=""> @Model.Description</textarea>
                </div>
                <div class="mb-3 col-lg-6">
                    <label asp-for="Quantity" for="" class="form-label">Product Quantity</label>
                    <input type="number"
                           asp-for="Quantity"
                           value="@Model.Quantity"
                           class="form-control"
                           placeholder=""></input>
                </div>
                <div class="mb-3 col-lg-6">
                    <label asp-for="Price" for="" class="form-label">Product Price</label>
                    <input type="number"
                           asp-for="Price"
                           value="@Model.Price"
                           class="form-control"
                           placeholder=""></input>
                </div>
                <div class="mb-3 col-lg-12 d-flex align-items-center mt-4">
                    <div class="form-check">
                        @{
                            if (Model.EnableSize == true)
                            {
                                <input class="form-check-input" type="checkbox" asp-for="EnableSize" checked />
                            }
                            else
                            {
                                <input class="form-check-input" type="checkbox" asp-for="EnableSize" unchecked />

                            }
                        }
                       
                        <label class="form-check-label" asp-for="EnableSize" for=""> Enable Product Size </label>
                    </div>


                </div>

                <div class="mb-3 col-lg-6">
                    <label asp-for="CompanyId" for="" class="form-label">company</label>
                    <select class="form-select "
                            asp-for="CompanyId">
                        @{
                            if (Model.CompanyId == 1)
                            {
                                <option >select one</option>
                                <option value="1" selected>nike</option>
                                <option value="2">adidas</option>
                            }
                            else if (Model.CompanyId == 2)
                            {
                                <option >select one</option>
                                <option value="1">nike</option>
                                <option value="2" selected>adidas</option>
                            }
                            else
                            {
                                <option selected>select one</option>
                                <option value="1">nike</option>
                                <option value="2">adidas</option>
                            }
                        }
                        
                        
                    </select>
                </div>



                <div class="col-lg-12 d-flex justify-content-center  ">

                    <button type="submit" class="btn btn-primary">Submit</button>

                </div>
            </form>

        </div>
    </div>
</div>