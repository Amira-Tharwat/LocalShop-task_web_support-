@model Blog

@{
    Layout = "_DashBoard";
}


<div class="dash-content">
    <div class="overview">
        <div class="title">
            <i class="uil uil-tachometer-fast-alt"></i>
            <span class="text">Editing Blog</span>
        </div>

        <div>
            <form method="post" asp-action="EditBlog" class="row">
                <div class="mb-3">
                    <label asp-for="Name" for="" class="form-label">Blog Title</label>
                    <input type="text"
                           asp-for="Name"
                           value="@Model.Name"
                           class="form-control"
                           placeholder="" />

                </div>
                <div class="mb-3">
                    <label asp-for="Description" for="" class="form-label">Blog Description</label>
                    <textarea type="text"
                              asp-for="Description"
                              class="form-control"
                              placeholder="">@Model.Description</textarea>
                </div>
                <div class="mb-3">
                    <label asp-for="AuthorName" for="" class="form-label">AuthorName</label>
                    <textarea type="text"
                              asp-for="AuthorName"
                              class="form-control"
                              placeholder="">@Model.AuthorName</textarea>
                </div>

                <div class="mb-3 col-lg-6">
                    <label asp-for="BlogTypeId" for="" class="form-label">BlogType</label>
                    <select class="form-select "
                            asp-for="BlogTypeId">
                        @{
                            if (Model.BlogTypeId == 1)
                            {
                                <option >Select one</option>
                                <option value="1" selected>comedy</option>
                                <option value="2">romantic</option>
                                <option value="3">horror</option>
                                <option value="4">scientific</option>
                            }
                            else if (Model.BlogTypeId == 2)
                            {
                                <option >Select one</option>
                                <option value="1">comedy</option>
                                <option value="2" selected>romantic</option>
                                <option value="3">horror</option>
                                <option value="4">scientific</option>
                            }
                            else if (Model.BlogTypeId == 3)
                            {
                                <option >Select one</option>
                                <option value="1">comedy</option>
                                <option value="2">romantic</option>
                                <option value="3" selected>horror</option>
                                <option value="4">scientific</option>
                            }
                            else if (Model.BlogTypeId == 4)
                            {
                                <option >Select one</option>
                                <option value="1">comedy</option>
                                <option value="2">romantic</option>
                                <option value="3">horror</option>
                                <option value="4" selected>scientific</option>
                            }
                            else
                            {
                                <option selected>Select one</option>
                                <option value="1">comedy</option>
                                <option value="2">romantic</option>
                                <option value="3">horror</option>
                                <option value="4">scientific</option>

                            }
                        }



                        
                    </select>
                </div>



                <div class="col-lg-12 d-flex justify-content-center  ">

                    <button type="submit" class="btn btn-primary">Submit</button>

                </div>
            </form>

        </div>
    </div>
</div>